# Server Configuration
PORT=3004
NODE_ENV=development
LOG_LEVEL=info

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/omc_analytics

# JWT Configuration
JWT_SECRET=your-secret-key-here

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=omc_events
RABBITMQ_QUEUE=analytics

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=86400

# Service URLs
FEEDBACK_SERVICE_URL=http://localhost:3001/api
USER_SERVICE_URL=http://localhost:3002/api
NOTIFICATION_SERVICE_URL=http://localhost:3003/api

# Data Aggregation Schedule (cron format)
DAILY_AGGREGATION_SCHEDULE="0 0 * * *"
WEEKLY_AGGREGATION_SCHEDULE="0 0 * * 0"
MONTHLY_AGGREGATION_SCHEDULE="0 0 1 * *"

# Initial Setup
RUN_INITIAL_AGGREGATION=false
